
<?xml version="1.0" encoding="utf-8"?>
<com.zacharee1.systemuituner.views.ImmersiveMode xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/mode"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="textStart"
            android:layout_weight="1"
            android:textColor="?android:textColorPrimary"
            />

        <TextView
            android:text="@string/all_apps"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="?android:textColorPrimary"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:text="@string/select_apps"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="?android:textColorPrimary"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:text="@string/immersive_blacklist"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?android:textColorPrimary"
            android:textAlignment="center"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <com.zacharee1.systemuituner.views.RoundedFrameCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mode_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />

    </com.zacharee1.systemuituner.views.RoundedFrameCardView>

</com.zacharee1.systemuituner.views.ImmersiveMode>
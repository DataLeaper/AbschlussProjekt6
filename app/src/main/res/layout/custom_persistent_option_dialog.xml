<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/label_entry_wrapper"
        android:hint="@string/label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/key_entry_wrapper">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/label_entry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/settings_type"
        android:layout_width="0dp"
        android:layout_height="?listPreferredItemHeightSmall"
        android:entries="@array/settings_types_names"
        app:layout_constraintStart_toStartOf="@id/value_entry_wrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/label_entry_wrapper"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/key_entry_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/key"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/label_entry_wrapper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/value_entry_wrapper">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/key_entry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/value_entry_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/value"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/label_entry_wrapper"
        app
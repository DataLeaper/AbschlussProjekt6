<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zacharee1.systemuituner.prefs.secure.SecureSeekBarPreference
        android:title="@string/feature_long_press_delay"
        android:summary="@string/feature_long_press_delay_desc"
        android:key="long_press_timeout"
        android:defaultValue="400"
        android:icon="@drawable/tap_hold"
        app:icon_color="@color/pref_color_3"
        app:units="ms"
        app:minValue="100"
        app:maxValue="5000"
        app:settings_type="secure"
        />

    <com.zacharee1.systemuituner.prefs.secure.SecureSwitchPreference
        android:title="@string/option_disable_combined_internet"
        android:summary="@string/option_disable_combined_internet_desc"
        android:key="settings_provider_model"
        android:icon="@drawable/ic_network"
        app:settings_type="global"
        app:enabled_value="0"
        app:disabled_value="1"
        app:icon_color="@color/pref_color_1"
        app:low_api="31"
        />

    <com.zacharee1.systemuituner.prefs.secure.SecureSeekBarPreference
        android:title="@string/option_back_gesture_inset_scale_left"
        android:summary="@string/option_back_gesture_inset_scale_left_desc"
        android:key="back_gesture_inset_scale_left"
        android:defaultValue="100"
        android:icon="@drawable/border_left_variant"
        app:icon_color="@color/pref_color_5"
        app:scale="0.01"
        app:minValue="0"
        app:maxValue="500"
        app:settings_type="secure"
        app:low_api="30"
        />

    <com.zacharee1.systemuituner.prefs.secure.SecureSeekBarPreference
        android:title="@string/option_back_gesture_inset_scale_right"
        android:summary="@string/option_back_gesture_inset_scale_right_desc"
        android:key="back_gesture_inset_scale_right"
        android:defaultValue="100"
        android:icon="@drawable/border_right_variant"
        app:icon_color="@color/pref_color_6"
        app:scale="0.01"
        app:minValue="0"
        app:maxValue="500"
        app:settings_type="secure"
        app:low_api="30"
        />

    <com.zacharee1.systemuituner.prefs.secure.specific.KeepDeviceOnPluggedPreference />
    <com.zacharee1.systemuituner.prefs.secure.specific.AnimationScalesPreference />
    <com.zacharee1.systemuituner.prefs.secure.specific.CameraGesturesPreference />
    <com.zacharee1.systemuituner.prefs.secure.specific.ImmersiveModePreference />
    <com.zacharee1.systemuituner.prefs.secure.specific.DarkModePreference />
</PreferenceScreen>